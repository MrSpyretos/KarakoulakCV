<MudGrid style="color: purple">
    @if (ProjectModels.Any())
    {
        foreach (var item in ProjectModels.OrderBy(i=> i.Order))
        {
            <MudItem xs="12" sm="4">
                <MudCard>
                    <MudCardMedia Image="@(item.Image)" Height="250"/>
                    <MudCardContent Style="height: 120px">
                        <MudText Color="Color.Tertiary" Typo="Typo.h5">@(item.Title)</MudText>
                        <MudText Style="color: mediumpurple" Typo="Typo.body2">@(item.Description)</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        @if (!string.IsNullOrWhiteSpace(item.Repository))
                        {
                            <MudButton OnClick="@(() => Code(item.Title))" Variant="Variant.Text" Color="Color.Info">Code</MudButton>
                        }
                        <MudButton Variant="Variant.Text" Color="Color.Info" OnClick="@(() => Click(item.Title))">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    }
</MudGrid>

