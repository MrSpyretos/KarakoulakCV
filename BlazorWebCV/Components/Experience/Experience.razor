<MudTimeline TimelineOrientation="TimelineOrientation.Vertical" TimelinePosition="TimelinePosition.Left">
    @foreach (var item in ExperienceModel.Value.Experience.Values.OrderByDescending(i => i["order"]))
    {
        <MudTimelineItem Color="Color" Size="Size.Small">
            <ItemContent>
                <MudCard>
                    <MudCardContent>
                        @if (AppState.CurrentBreakPoint == Breakpoint.Xs)
                        {
                            <MudText Color="Color" Typo="Typo.h6" GutterBottom="true">@item["title"] @item["date"]</MudText>
                        }
                        else
                        {
                            <div style="display: flex">
                                <MudText Color="Color" Typo="Typo.h6" GutterBottom="true">@item["title"]</MudText>
                                <MudSpacer/>
                                <MudText Color="Color" Typo="Typo.h6" GutterBottom="true">@item["date"]</MudText>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(item["organisation"]))
                        {
                            <MudText Style="color: #afa3a3" Typo="Typo.body2" GutterBottom="true">@item["organisation"]</MudText>
                        }
                        @foreach (var text in item["description"].Split("\n"))
                        {
                            <MudText>
                                @text
                            </MudText>
                            <br/>
                        }
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>
    }
</MudTimeline>