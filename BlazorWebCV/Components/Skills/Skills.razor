<MudGrid>
    <MudItem xs="12" sm="6">
        <MudCard>
            <MudCardHeader>
                <MudText Style="margin: auto" Typo="Typo.h6">Programming Skills</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    @foreach (var item in SkillsModel.Value.ProgrammingSkills)
                    {
                        <MudItem xs="12" sm="6">
                            <MudGrid>
                                <MudItem xs="3">
                                    <MudAvatar Image="@(item.Value["image"])">
                                    </MudAvatar>
                                </MudItem>
                                <MudItem xs="9">
                                    <MudText Style="margin-top: 10px;"> @(item.Value["text"])</MudText>
                                </MudItem>
                            </MudGrid>
                        </MudItem>
                    }
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudCard>
            <MudCardHeader>
                <MudText Style="margin: auto" Typo="Typo.h6">Soft Skills</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    @foreach (var item in SkillsModel.Value.SoftSkills)
                    {
                        if (item.Key.Equals("english") || item.Key.Equals("greek"))
                        {
                            <MudItem xs="12" sm="6">
                                <MudGrid>
                                    <MudItem xs="4">
                                        <MudAvatar Image="@(item.Value["image"])"/>
                                    </MudItem>
                                    <MudItem xs="8">
                                        <MudText Style="margin-top: 10px;">@(item.Value["text"])</MudText>
                                    </MudItem>
                                </MudGrid>
                            </MudItem>
                        }
                    }

                    @foreach (var item in SkillsModel.Value.SoftSkills)
                    {
                        if (!item.Key.Equals("english") && !item.Key.Equals("greek"))
                        {
                            <MudItem xs="6">
                                <MudListItem IconColor="Color.Default" Icon="@Icons.Material.Filled.Circle" Text="@(item.Value["text"])"></MudListItem>
                            </MudItem>
                        }
                    }

                </MudGrid>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

