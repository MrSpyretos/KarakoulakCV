<MudCard>
    <MudCardContent >
        <MudGrid>
            @foreach (var item in ToolsModel.Value.Tools.Values)
            {
                <MudItem xs="12" sm="3">
                    <MudGrid>
                        <MudItem xs="3">
                            <MudAvatar>
                                <MudImage Src="@(item["image"])"></MudImage>
                            </MudAvatar>
                        </MudItem>
                        <MudItem xs="9">
                            <MudText Style="margin-top: 10px;"> @(item["text"])</MudText>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            }
        </MudGrid>
    </MudCardContent>
</MudCard>

