<MudCard 
    Style="@($"position: fixed;bottom:10vh;z-index: 9999;height: 450px;width: 280px;visibility: {ChatState.Visibility}")" 
    Elevation="5">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Chat</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIcon Icon="@Icons.Material.Filled.Minimize"
                                       @onclick="@(() => ChatState.IsChatOpen = !ChatState.IsChatOpen)"
                                       Size="Size.Small"
                                       Title="Minimize"
                                       Style="@($"color: {ChatMinimizeColor} !important;cursor: pointer;")" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent Style="padding: 0">
                    <ChatMessages @bind-Messages="ChatState.ChatMessages" 
                                  ChatIconColor="@ChatIconColor"></ChatMessages>
                </MudCardContent>
            </MudCard>
            <MudAvatar Style="position: fixed;bottom:5vh;z-index: 9999;border: none;cursor: pointer;"
                       @onclick="@(() => ChatState.IsChatOpen = !ChatState.IsChatOpen)"
                       Elevation="5"
                       Color="Color.Dark"
                       Size="Size.Large"
                       Variant="Variant.Filled">
                <MudIcon Style="@($"color: {ChatIconColor} !important;")" 
                         Color="Color.Tertiary" 
                         Icon="@Icons.Material.Filled.Message" 
                         Size="Size.Large"/>
            </MudAvatar>